<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/entryTypeFragment">

    <fragment
        android:id="@+id/entryTypeFragment"
        android:name="com.example.financeapp.EntryTypeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_entry_type">
        <action
            android:id="@+id/action_entryTypeFragment_to_entryDetailsFragment"
            app:destination="@id/entryDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryDetailsFragment"
        android:name="com.example.financeapp.EntryDetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_entry_details" />
</navigation>